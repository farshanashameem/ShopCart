<script>
  const searchInput = document.getElementById("searchInput");
  const clearBtn = document.getElementById("clearSearchBtn");

  // Show the clear button only when there's text
  searchInput.addEventListener("input", () => {
    clearBtn.style.display = searchInput.value ? "block" : "none";
  });

  // Clear the input and resubmit or redirect to /products
  clearBtn.addEventListener("click", () => {
    searchInput.value = "";
    clearBtn.style.display = "none";
    window.location.href = "/products"; // âœ… Redirect to all products after clear
  });

  // If there's already a search value (on reload), show the clear button
  if (searchInput.value) clearBtn.style.display = "block";
</script>
