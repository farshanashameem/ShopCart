<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', { title: 'Change password' }) %>
  <body class=" d-flex justify-content-center align-items-center vh-100">

    <div class="container p-4 shadow rounded-4 overflow-hidden a" style="max-width: 900px;background-color: rgb(244, 236, 227) !important;">
      <div class="row g-0">
        <!-- Left Section (Form) -->
        <div class="col-md-6  p-5 d-flex flex-column justify-content-center">
        <h2><b>Change password</b></h2>

          <% if (success && success.length > 0) { %>
            <p class="text-success">
              <%= success %>
            </p>
          <% } %>

          <% if (error && error.length > 0) { %>
            <p class="text-danger">
              <%= error %>
            </p>
          <% } %>


          <form action="/change-password" method="POST" >
            
            <input type="password" name="password" id="password" class="form-control mb-3 position-relative" placeholder="New Password" oninput="showField()"/>
                 
            <!-- Show/Hide & Clear Buttons -->
                  <div class="position-absolute top-50 end-0 translate-middle-y d-flex align-items-center me-3">
                    <span class="d-none text-primary" id="show" onclick="showPassword()">Show</span>
                  </div>
            
            <% if (typeof errors !== 'undefined' && errors.password) { %>
                <p class="text-danger"><%= errors.password.msg %></p>
              <% } %>

              <input type="password" name="cpassword" class="form-control mb-3" placeholder="Confirm Password" />
              <% if (typeof errors !== 'undefined' && errors.cpassword) { %>
                <p class="text-danger"><%= errors.cpassword.msg %></p>
              <% } %>
           
            <button type="submit" class="btn w-100 rounded-2 py-2 text-white" style="background-color: #4e4039;">Change Password</button>
          </form>

          <p class="mt-4 text-center text-muted">
           <a href="/login" class="text-primary text-decoration-none text-center">Go back to login page</a>
          </p>
        </div>

        <!-- Right Section (Image) -->
        <div class="col-md-6 d-none d-md-block">
          <img src="/images/change-password.png" alt="Login Visual" class="img-fluid h-100 w-100 object-fit-cover" style="object-fit: cover;" />
        </div>
      </div>
    </div>
     <script src="/js/showpassword.js"></script>
  </body>
</html>
