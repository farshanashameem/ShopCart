<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title: 'Home - ShopCart' }) %>

  <body>
    <%- include('../partials/navbar') %>

      <!-- Hero Section -->
 <section class="container-fluid mt-0 banner-image ">
  <div class="row g-0 text-center align-items-stretch" style="border-radius: 0px;">
    
    <!-- Left Banner -->
    <div class="col-md-3 d-none d-md-block banner-image" style="border-radius: 0px;">
      <img src="/images/leftBanner.png" class="img-fluid w-100 h-100 banner-image" alt="Left Banner" style="object-fit: cover;border-radius: 0px !important;">
    </div>

    <!-- Center Column -->
    <div class="col-md-6 d-flex flex-column banner-image">
      
      <!-- Top Image -->
      <img src="/images/banner1.png" class="img-fluid w-100 banner-image" alt="Banner 1" style="border-radius: 0;">
      
      <!-- Text Section -->
      <div class="d-flex flex-column justify-content-center bg-dark text-white py-4 banner-image">
        <h1 class="fw-bold display-4 text-uppercase m-0">
          ULTIMATE <span class="text-outline">SALE</span>
        </h1>
        <p class="lead mb-3">âœ¨ New Collection âœ¨</p>
        <a href="/login" class="btn btn-light px-4 py-2 rounded-pill shadow mx-auto">
          ðŸ›’ Shop Now
        </a>
      </div>

      <!-- Bottom Image -->
      <img src="/images/banner2.png" class="img-fluid w-100 banner-image" alt="Banner 2" style="border-radius: 0;">
    </div>

    <!-- Right Banner -->
    <div class="col-md-3 d-none d-md-block banner-image">
      <img src="/images/rightBanner.png" class="img-fluid w-100 h-100 banner-image" alt="Right Banner" style="object-fit: cover;">
    </div>
    
  </div>
</section>



      <!-- Explore by Category -->
      <section class="container text-center my-5">
        <h3 class="fw-bold">EXPLORE BY CATEGORY</h3>
        <div class="btn-group my-3">
          <button class="btn btn-dark" onclick="switchCategory('female')">Women</button>
          <button class="btn btn-outline-dark" onclick="switchCategory('male')">Men</button>
        </div>

        <% ['female', 'male' ].forEach(gender=> { %>
          <div class="position-relative category-section" id="category-<%= gender %>"
            style="<%= gender === 'female' ? '' : 'display:none;' %>">

            <!-- Left arrow -->
            <button class="scroll-btn left" onclick="slideCategory('<%= gender %>', -1)">&#8249;</button>

            <!-- Slide container -->
            <div class="category-slider-wrapper">
              <div id="category-slider-<%= gender %>" class="category-slider">
                <% if (categories[gender]) { %>
                  <% categories[gender].forEach(cat=> { %>
                    <div class="item-card text-center">
                    <a href="<%= `/products/${gender === 'female' ? 'women' : 'men'}?category=${cat.categoryId}` %>">

                        <div class="category-img-wrapper">
                        <img src="<%= cat.image %>" alt="<%= cat.categoryName %>">
                      </div>
                      </a>
                      <h6 class="mt-2">
                        <%= cat.categoryName %>
                      </h6>
                    </div>

                    <% }) %>
                      <% } %>
              </div>
            </div>

            <!-- Right arrow -->
            <button class="scroll-btn right" onclick="slideCategory('<%= gender %>', 1)">&#8250;</button>
          </div>
          <% }) %>
      </section>






      <!-- New Arrivals -->
      <section class="container text-center my-5">
        <h3 class="fw-bold">NEW ARRIVALS</h3>
        <div class="btn-group my-3">
          <button class="btn btn-dark" onclick="switchArrivals('female')">Women</button>
          <button class="btn btn-outline-dark" onclick="switchArrivals('male')">Men</button>
        </div>


        <% ['female', 'male' ].forEach(gender=> { %>
          <div class="position-relative arrival-section" id="arrival-<%= gender %>"
            style="<%= gender === 'female' ? '' : 'display:none;' %>">

            <!-- Left arrow -->
            <button class="scroll-btn left" onclick="slideArrival('<%= gender %>', -1)">&#8249;</button>

            <!-- Slide container -->
            <div class="category-slider-wrapper">
              <div id="arrival-slider-<%= gender %>" class="category-slider">
                <% if (arrivals[gender]) { %>
                  <% arrivals[gender].forEach(item=> { %>
                    <div class="item-card text-center">
                      <a href="/details/<%= item.id %>" class="text-decoration-none">
                        <div class="category-img-wrapper">
                        <img src="<%= item.image %>" class="img-fluid rounded mb-2" alt="<%= item.productName %>">
                      </div>
                      </a>
                      <h6 class="mt-2">
                        <%= item.productName %>
                      </h6>
                    </div>

                    <% }) %>
                      <% } %>
              </div>
            </div>

            <!-- Right arrow -->
            <button class="scroll-btn right" onclick="slideArrival('<%= gender %>', 1)">&#8250;</button>
          </div>
          <% }) %>




      </section>


      <%- include('../partials/footer') %>
        <!-- Bootstrap Bundle with Popper -->
        <script src="/js/scroll.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  </body>

</html>