<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title: 'Home - ShopCart' }) %>

  <body>
    <%- include('../partials/navbar') %>

      <!-- Hero Section -->
      <section class="container my-4">
        <div class="row align-items-center">
          <div class="col-3 text-center">
            <img src="/images/leftBanner.png" class="img-fluid" alt="Left Banner">
          </div>
          <div class="col-6 text-center">
            <img src="/images/banner1.png" class="img-fluid col " alt="Banner 1">
            <h1 class="fw-bold display-4">ULTIMATE <span class="text-outline">SALE</span></h1>
            <p class="lead">NEW COLLECTION</p>
            <a href="/login" class="rounded px-4 py-2 text-decoration-none bg-dark "
              style="background-color: black;color: white;">SHOP NOW</a>
            <img src="/images/banner2.png" class="img-fluid col mt-4" alt="Banner 2">
          </div>
          <div class="col-3 text-center">
            <img src="/images/rightBanner.png" class="img-fluid" alt="Right Banner">
          </div>
        </div>


      </section>

      <!-- Explore by Category -->
      <section class="container text-center my-5">
        <h3 class="fw-bold">EXPLORE BY CATEGORY</h3>
        <div class="btn-group my-3">
          <button class="btn btn-dark" onclick="switchCategory('female')">Women</button>
          <button class="btn btn-outline-dark" onclick="switchCategory('male')">Men</button>
        </div>

        <% ['female', 'male' ].forEach(gender=> { %>
          <div class="position-relative category-section" id="category-<%= gender %>"
            style="<%= gender === 'female' ? '' : 'display:none;' %>">

            <!-- Left arrow -->
            <button class="scroll-btn left" onclick="slideCategory('<%= gender %>', -1)">&#8249;</button>

            <!-- Slide container -->
            <div class="category-slider-wrapper">
              <div id="category-slider-<%= gender %>" class="category-slider">
                <% if (categories[gender]) { %>
                  <% categories[gender].forEach(cat=> { %>
                    <div class="item-card text-center">
                      <div class="category-img-wrapper">
                        <img src="<%= cat.image %>" alt="<%= cat.categoryName %>">
                      </div>
                      <h6 class="mt-2">
                        <%= cat.categoryName %>
                      </h6>
                    </div>

                    <% }) %>
                      <% } %>
              </div>
            </div>

            <!-- Right arrow -->
            <button class="scroll-btn right" onclick="slideCategory('<%= gender %>', 1)">&#8250;</button>
          </div>
          <% }) %>
      </section>



