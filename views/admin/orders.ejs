<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', { title: 'Order Management' }) %>
  <body >
    <div class="container-fluid ">
      <div class="row min-vh-100" >
         <%- include('../partials/adminDashboard') %>

        <!-- Main Content -->

        <div class="col-md-9 mt-5">
          <h2 class="mb-4">Order Management</h2>

         


  <!-- Search Form -->
   <div class="d-flex flex-row">
      <form method="GET" action="/admin/orders" class="mb-3 d-flex justify-content-end float-right col">
        <input type="text" name="search" value="<%= search %>" class="form-control me-2" placeholder="Search by name...">
        <button class="btn btn-dark me-2">Search</button>
        <% if (search) { %>
          <a href="/admin/orders" class="p-3 bg-danger btn" style="color: White;">Clear</a>
        <% } %>
      </form>
    </div>

    <% if(error) {%>
       <p><b class="text-danger"><%= error %></b></p>
    <%} %>

  <!-- User Table -->
  <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>Order</th>
            <th>Customer</th>
            <th>Date of order</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
            <tr 
              class="clickable-row"  
              onclick="window.location.href='/admin/orders/<%= order.orderId %>'" >
              <td><%= order.name %></td>
              <td><%= order.customer %></td>
              <td><%= order.date %></td>
              <td><%= order.status %></td>
              
            </tr>
          <% }) %>
        </tbody>
      </table>
       
      <!-- Pagination -->
     <!-- Pagination -->
<% if (totalPages > 1) { %>
  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center mt-4">
      <!-- Previous Button -->
      <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
        <a class="page-link" 
           href="/admin/orders?page=<%= currentPage - 1 %>&search=<%= search %>">Previous</a>
      </li>

      <!-- Page Numbers -->
      <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
          <a class="page-link" 
             href="/admin/orders?page=<%= i %>&search=<%= search %>"><%= i %></a>
        </li>
      <% } %>

      <!-- Next Button -->
      <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
        <a class="page-link" 
           href="/admin/orders?page=<%= currentPage + 1 %>&search=<%= search %>">Next</a>
      </li>
    </ul>
  </nav>
<% } %>



 
</div>
           
    
