<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title: 'Return Management' }) %>

<body>
  <div class="container-fluid">
    <div class="row min-vh-100">
      <%- include('../partials/adminDashboard') %>
      <%- include('../partials/sweetAlert') %>

      <!-- Main Content -->
      <div class="col-9 mt-5">
        <h2 class="mb-4">Return Management</h2>

        <!-- Search Form -->
        <form method="GET" action="/admin/returns" class="mb-3 d-flex">
          <input type="text" name="search" class="form-control me-2" value="<%= search %>"
            placeholder="Search by customer name...">
          <button class="btn btn-dark me-4">Search</button>
          <% if (search) { %>
            <a href="/admin/returns" class="p-3 bg-danger btn" style="color: white;">Clear</a>
          <% } %>
        </form>

        <!-- Returns Table -->
        <table class="table table-bordered table-striped">
          <thead class="table-dark">
            <tr>
              <th>Customer</th>
              <th>Order Id</th>
              <th>Product</th>
              <th>Reason</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach(order => { %>
              <tr>
                <td><%= order.name %></td>
                <td><%= order.orderId %></td>
                <td><%= order.product %></td>
                <td><%= order.reason %></td>
                <td><%= order.status %></td>
                <td>
                  <% if (order.status === 'pending') { %>
                    <form>
                      <input type="hidden" name="orderId" value="<%= order.orderId %>">
                      <input type="hidden" name="productId" value="<%= order.productId %>">
                      <input type="hidden" name="variantId" value="<%= order.variantId %>">
                      <input type="hidden" name="userId" value="<%= order.userId %>">
                      <input type="hidden" name="total" value="<%= order.price * order.quantity %>">
                      <input type="hidden" name="discount" value="<%= order.couponDiscount || 0 %>">

                      <button type="submit" class="btn btn-success ms-2 return-action"
                        data-action="approved">Accept</button>
                      <button type="submit" class="btn btn-danger ms-2 return-action"
                        data-action="rejected">Reject</button>
                    </form>
                  <% } else if (order.status === 'approved') { %>
                    <form>
                      <input type="hidden" name="orderId" value="<%= order.orderId %>">
                      <input type="hidden" name="productId" value="<%= order.productId %>">
                      <input type="hidden" name="variantId" value="<%= order.variantId %>">
                      <input type="hidden" name="userId" value="<%= order.userId %>">
                      <input type="hidden" name="total" value="<%= order.price * order.quantity %>">
                      <input type="hidden" name="discount" value="<%= order.couponDiscount || 0 %>">

                      <button type="submit" class="btn btn-primary ms-2 return-action"
                        data-action="refunded">Refund</button>
                    </form>
                  <% } else if (order.status === 'refunded') { %>
                    <div class="text-success ">
                     
                      Refund Successful
                        
                    </div>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>

        <!-- Pagination -->
        <% if (totalPages > 1) { %>
          <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mt-4">
              <!-- Previous Button -->
              <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                <a class="page-link"
                  href="/admin/returns?page=<%= currentPage - 1 %>&search=<%= search %>">Previous</a>
              </li>

              <!-- Page Numbers -->
              <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                  <a class="page-link" href="/admin/returns?page=<%= i %>&search=<%= search %>">
                    <%= i %>
                  </a>
                </li>
              <% } %>

              <!-- Next Button -->
              <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                <a class="page-link"
                  href="/admin/returns?page=<%= currentPage + 1 %>&search=<%= search %>">Next</a>
              </li>
            </ul>
          </nav>
        <% } %>
      </div>

      <footer class="text-center py-4 small text-muted border-top mt-4" style="font-weight: 700;">
        Â© 2025 | ShopCart | All Rights Reserved. | We Give You Style.
      </footer>
    </div>
  </div>

  <!-- Bootstrap & Icons -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <%- include('../partials/successAlert') %>
  <script src="/js/sweetAlert.js"></script>
  <script src="/js/returnAction.js"></script>
</body>
</html>
