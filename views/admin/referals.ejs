<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title: 'Referals' }) %>

<body>
  <div class="container-fluid">
    <div class="row min-vh-100">
      <%- include('../partials/adminDashboard') %>
      <%- include('../partials/sweetAlert') %>

      <!-- Main Content -->
      <div class="col-9 mt-5">
        <h2 class="mb-4">Referals</h2>

        <div class="m-3 border-rounded p-4 bg-light">
            <h5><b>Total Referals:  <%= totalRefferals %></b></h5>
            <h5><b>Total Rewards:  <%= totalRewards %></b></h5>
            <h5><b>Refered Users:  <%= totalReferredUsers %></b></h5>

        </div>

        

        <!-- Referal Table -->
        <table class="table table-bordered table-striped mt-4">
          <thead class="table-dark">
            <tr>
              <th>Referrer Name</th>
              <th>Referal code</th>
              <th>Reffered Users</th>
              <th>Rewarded amount</th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach(item => { %>
              <tr>
                <td><%= item.name %></td>
                <td><%= item.code %></td>
                <td><%= item.count %></td>
                <td><%= item.amount %></td>
                
              </tr>
            <% }) %>
          </tbody>
        </table>

       
      </div>

      <footer class="text-center py-4 small text-muted border-top mt-4" style="font-weight: 700;">
        Â© 2025 | ShopCart | All Rights Reserved. | We Give You Style.
      </footer>
    </div>
  </div>

  <!-- Bootstrap & Icons -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <%- include('../partials/successAlert') %>
  <script src="/js/sweetAlert.js"></script>
  <script src="/js/returnAction.js"></script>
</body>
</html>
