<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', { title: 'Product Management' }) %>
  <body >
    <div class="container-fluid ">
      <div class="row min-vh-100" >
         <%- include('../partials/adminDashboard') %>

        <!-- Main Content -->

        <div class="col-md-9 mt-5">
  <h2 class="mb-4">Product Management</h2>

  <!-- Search Form -->
   <div class="d-flex flex-row">
      <a href="/admin/addProducts" class="text-decoration-none addLink justify-content-start me-5 mb-3 col-md-3 text-center bg-dark">Add Products</a>
      <form method="GET" action="/admin/products" class="mb-3 d-flex justify-content-end float-right col">
        <input type="text" name="search" value="<%= search %>" class="form-control me-2" placeholder="Search by name...">
        <button class="btn btn-dark me-2">Search</button>
        <% if (search) { %>
          <a href="/admin/products" class="p-3 bg-danger btn" style="color: White;">Clear</a>
        <% } %>
      </form>
    </div>

    <% if(error) {%>
       <p><b class="text-danger"><%= error %></b></p>
    <%} %>

  <!-- User Table -->
  <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>Product Name</th>
            <th>Minimum Price</th>
            <th>Maximum Price</th>
            <th>Stock</th>
            <th>Added On</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
            <tr 
              class="clickable-row"  
              onclick="window.location.href='/admin/product/<%= product._id %>'" 
            >
              <td><%= product.name %></td>
              <td>₹ <%= product.discountPrice %></td>
              <td>₹ <%= product.basePrice %></td>
              <td><%= product.totalStock %></td>
              <td><%= product.create %></td>
              <td>
               <form method="POST" 
                      action="/admin/products/<%= product._id %>/toggle" 
                      style="display:inline;">
                  <input type="hidden" name="page" value="<%= currentPage %>">
                  <input type="hidden" name="search" value="<%= search %>">
                  <button class="btn btn-sm <%= product.isActive ? 'btn-danger' : 'btn-success' %>">
                    <%= product.isActive ? 'Delete' : 'Restore' %>
                  </button>
                </form>


              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
       
      <!-- Pagination -->
      <% if (totalPages > 1) { %>
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center mt-4">
            <!-- Previous Button -->
            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
              <a class="page-link" 
                href="/admin/products?page=<%= currentPage - 1 %>&search=<%= search %>">Previous</a>
            </li>

            <!-- Page Numbers -->
            <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" 
                  href="/admin/products?page=<%= i %>&search=<%= search %>"><%= i %></a>
              </li>
            <% } %>

            <!-- Next Button -->
            <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
              <a class="page-link" 
                href="/admin/products?page=<%= currentPage + 1 %>&search=<%= search %>">Next</a>
            </li>
          </ul>
        </nav>
      <% } %>


 
</div>
           
    
      <footer class="text-center py-4 small text-muted border-top mt-4" style="font-weight: 700;">
        © 2025 | ShopCart | All Rights Reserved. | We Give You Style.
        </footer>>
    </div>

   

    <!-- Bootstrap & Icons -->
      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <%- include ('../partials/successAlert') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
