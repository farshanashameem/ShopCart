<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', { title: 'Admin Profile' }) %>
  <body >
    <div class="container-fluid ">
      <div class="row min-vh-100" >
         <%- include('../partials/adminDashboard') %>

        <!-- Main Content -->
         <div class="col-md-8 d-flex flex-column m-4 text-center" >
            <h1 class="text-center">Edit Product Type</h1>
            <% if(error) { %>
                <p class="text-danger"><b><%= error%></b></p>
            <%} %>
            <div class="d-flex justify-content-center mt-5">
                <form action="/admin/editPType" method="post" class="d-flex flex-column p-4 gap-4 col-md-6">
                    <input type="hidden" name="id" value="<%= pType._id %>">
                    <label for="pname"></label>
                    <input type="text" name="pname" placeholder="Product name" class="form-control" value="<%= oldInput?.name || pType.name %>"
 />
                    
                    <label for="description"></label>
                    <textarea name="description" placeholder="Description" class="form-control"><%= oldInput?.description||pType.description%></textarea>
                    
                    <button class="btn btn-dark" type="submit">Add</button>
                </form>
            </div>


         </div>
        
    </div>
